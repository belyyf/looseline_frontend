# ===============================================
# LooseLINE Monorepo - Environment Variables
# ===============================================
# Copy this file to .env and fill in your values

# ===============================================
# PostgreSQL (Shared)
# ===============================================
POSTGRES_USER=looseline
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=looseline

# Individual databases for each module
AUTH_DB=looseline_auth
FINANCE_DB=looseline_finance
SPORTS_DB=looseline_sports
BETTING_DB=looseline_betting

# ===============================================
# Redis
# ===============================================
REDIS_URL=redis://redis:6379/0

# ===============================================
# Auth Module (Better-auth)
# ===============================================
BETTER_AUTH_SECRET=generate_a_strong_secret_here
NEXT_PUBLIC_APP_URL=http://localhost

# ===============================================
# Finance Module (Stripe)
# ===============================================
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
SECRET_KEY=your-secret-key-for-jwt

# ===============================================
# Environment
# ===============================================
ENVIRONMENT=development
