# =============================================================================
# LOOSELINE Wallet Module - Environment Variables Template
# =============================================================================
# Скопируйте этот файл в .env и заполните своими значениями
# Команда: cp env.template .env
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Локальное подключение (для разработки без Docker)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=looseline
DB_USER=postgres
DB_PASSWORD=your_password_here

# Альтернатива: полный URL подключения к БД
# DATABASE_URL=postgresql://postgres:your_password_here@localhost:5432/looseline

# Для Docker Compose используйте:
# DATABASE_URL=postgresql://looseline:looseline_secret@db:5432/looseline

# -----------------------------------------------------------------------------
# STRIPE CONFIGURATION
# -----------------------------------------------------------------------------
# Получите эти ключи на https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Получите этот секрет на https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your_super_secret_app_key_here_change_in_production

# -----------------------------------------------------------------------------
# API SETTINGS
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# CORS ORIGINS
# -----------------------------------------------------------------------------
# Список разрешённых источников (через запятую)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# -----------------------------------------------------------------------------
# REPORTS CONFIGURATION
# -----------------------------------------------------------------------------
REPORTS_DIR=./reports
REPORTS_BASE_URL=http://localhost:8000/reports

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION (опционально)
# -----------------------------------------------------------------------------
# REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

